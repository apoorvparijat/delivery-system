<struts>

	<constant name="struts.devMode" value="true" />


        <!-- If no class attribute is specified the framework will assume success and 
        render the result index.jsp -->
        <!-- If no name value for the result node is specified the success value is the default -->
<!--		<action name="index">
			<result>/index.jsp</result>
		</action>
	-->	
		<!-- If the URL is hello.action the call the execute method of class HelloWorldAction.
		If the result returned by the execute method is success render the HelloWorld.jsp 
		-->
	<package name="default" extends="struts-default" namespace="/">
	<!--	<action name="test" class="delivery.action.TestAction" method="execute">
			<result name="success">test12.jsp</result>
		</action>
	-->
		<action name="downloadmeow" class="delivery.action.TestAction" method="downloadMeow">
			<result name="success">meow.mov</result>
		</action>

		<action name="*css/*">
			<result>/css/{2}</result>
		</action>

		<action name="*img/*">
			<result>img/{2}</result>
		</action>

	</package>
	<package name="download" extends="struts-default" namespace="/delivery-system/download">
		<action name="*" class="delivery.action.DeliverAction" method="verifyDownload">
			<param name="verify-tx">{1}</param>
			<result name="success">wp-demon.zip</result>
			<result name="error"></result>
		</action>
	</package>

</struts>
